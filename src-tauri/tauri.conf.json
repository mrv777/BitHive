{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Bithive",
  "version": "0.2.1",
  "identifier": "com.bithive.app",
  "build": {
    "beforeBuildCommand": "pnpm run next-build",
    "beforeDevCommand": "pnpm next-start",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Bithive",
        "width": 800,
        "height": 600,
        "transparent": false,
        "decorations": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
